<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Panel - Appointments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #dfe9f3, #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
    }
    .admin-container {
      max-width: 1100px;
      margin: 0 auto;
      padding: 30px;
      background-color: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    }
    h1 {
      text-align: center;
      font-weight: 700;
      margin-bottom: 30px;
      color: #333;
    }
    .table thead th {
      background-color: #0d6efd;
      color: white;
      vertical-align: middle;
      text-align: center;
    }
    .table td, .table th {
      text-align: center;
      vertical-align: middle;
    }
    .btn-delete, .btn-reply {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .btn-reply {
      background-color: #198754;
      color: white;
    }
    .btn-delete:hover {
      background-color: #c82333;
    }
    .btn-reply:hover {
      background-color: #157347;
    }
    .search-bar {
      margin-bottom: 20px;
    }
    .reply-form {
      display: none;
      margin-top: 10px;
    }
    @media (max-width: 768px) {
      .table-responsive {
        overflow-x: auto;
      }
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <h1>Admin Panel - Appointments</h1>
    <input type="text" id="searchInput" class="form-control search-bar" placeholder="Search by name, email or service..." onkeyup="filterTable()">
    <div class="table-responsive">
      <table class="table table-bordered table-striped" id="appointmentTable">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Service</th>
            <th>Message</th>
            <th>Submitted At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (appointments.length === 0) { %>
            <tr><td colspan="8">No appointments found.</td></tr>
          <% } else { %>
            <% appointments.forEach((appointment, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= appointment.name %></td>
                <td><%= appointment.email %></td>
                <td><%= appointment.phone %></td>
                <td><%= appointment.service %></td>
                <td><%= appointment.message %></td>
                <td><%= appointment.createdAt.toLocaleString() %></td>
                <td>
                  <form action="/delete/<%= appointment._id %>" method="POST" onsubmit="return confirm('Are you sure to delete this appointment?');" style="display:inline-block">
                    <button class="btn-delete">Delete</button>
                  </form>
                  <button class="btn-reply" onclick="toggleReplyForm('<%= appointment._id %>')">Reply</button>
                  <div id="reply-form-<%= appointment._id %>" class="reply-form">
                    <form action="/reply/<%= appointment._id %>" method="POST">
                      <textarea name="message" class="form-control mb-2" rows="2" placeholder="Enter reply message"></textarea>
                      <button type="submit" class="btn btn-success btn-sm">Send</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function filterTable() {
      let input = document.getElementById("searchInput").value.toLowerCase();
      let rows = document.querySelectorAll("#appointmentTable tbody tr");
      rows.forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = text.includes(input) ? "" : "none";
      });
    }

    function toggleReplyForm(id) {
      const form = document.getElementById('reply-form-' + id);
      form.style.display = form.style.display === 'block' ? 'none' : 'block';
    }
  </script>
</body>
</html>
