<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Panel - Bookings</title>
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <header>
    <h1>Admin Panel</h1>
    <p>All Ride Bookings</p>
  </header>

  <main>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Destination</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Aadhaar</th>
          <th>Photo</th>
        </tr>
      </thead>
      <tbody>
        <% if (bookings.length === 0) { %>
          <tr><td colspan="8">No bookings found.</td></tr>
        <% } %>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.name %></td>
            <td><%= booking.email %></td>
            <td><%= booking.phone %></td>
            <td><%= booking.destination %></td>
            <td><%= booking.startDate %></td>
            <td><%= booking.endDate %></td>
            <td><a href="/uploads/<%= booking.aadhaar %>" target="_blank">View</a></td>
            <td><a href="/uploads/<%= booking.photo %>" target="_blank">View</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>
